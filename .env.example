# ── Docker Compose root .env ──────────────────────────────────────────────────
# Copy to .env and fill in real values.

# PostgreSQL
POSTGRES_USER=league
POSTGRES_PASSWORD=change-me-strong-password
POSTGRES_DB=league_db

# JWT – generate with: openssl rand -hex 32
JWT_SECRET=change-me-use-a-long-random-string-at-least-32-characters-long
JWT_EXPIRY=7d
MAGIC_LINK_EXPIRY_MINUTES=15

# SMTP (leave blank to log emails to console)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@yourdomain.com

# Public URL of the app (used in magic-link emails & CORS)
APP_URL=http://your-truenas-ip-or-domain

# Port nginx listens on the host
HTTP_PORT=80

# GitHub Container Registry – set to your repo path (user/repo)
GITHUB_REPOSITORY=youruser/putting-league

# Image tag to deploy (overridden by CI to the commit SHA)
IMAGE_TAG=latest
